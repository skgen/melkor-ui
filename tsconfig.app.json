{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["node", "jsdom"],
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "composite": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@style/*": ["./src/assets/scss/*"]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
  },
  "include": [
    "env.d.ts", 
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.vue",
  ],
  "exclude": [
    "src/**/__tests__/*",
    "public/code"
  ]
}